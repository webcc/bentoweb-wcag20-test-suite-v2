            </space>
          </yesNoOpenQuestion>
        </questions>
        <experience>
          <AssistiveTechnology minimumLevel="1" type="screenreader with magnification" />
          <UserAgent minimumLevel="1" type="browser" />
        </experience>
        <disabilities>
          <disability>dyslexia</disability>
        </disabilities>
      </scenario>
