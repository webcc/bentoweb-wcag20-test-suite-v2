  <formalMetadata>
    <description>
			Presentational element
			<html:code>font</html:code>
			where its presentation characteristic is used to convey
			information and/or relationship.
		</description>
    <title>
			Presentational elements in order to convey information
			and/or relationships.
		</title>
    <dc:creator>evlach@aegean.gr</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2005-2007</dc:rights>
    <date>2005-08-28</date>
    <status>accepted QA</status>
  </formalMetadata>
  <technology>
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label>
        <html:acronym>XHTML</html:acronym>
				™ 1.0 The Extensible HyperText Markup Language
				(Second Edition)
			</label>
      <testElements>
        <testElement>
          <elementName localname="font" namespace="http://www.w3.org/1999/xhtml" />
          <specReference xlink:href="http://www.w3.org/TR/html401/present/graphics.html#edef-FONT">
						Font modifier elements: FONT and BASEFONT
					</specReference>
        </testElement>
      </testElements>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
      <p>
				The test case is intended to fail as
				<html:code>font</html:code>
				element has been used to convey information and/or relationship.
			</p>
    </purpose>
    <expertGuidance>
      <p>
				Check whether presentation tag has been used to convey information and/or relationship.
			</p>
    </expertGuidance>
    <requiredTests>
      <testModes>
        <testMode>experts</testMode>
      </testModes>
    </requiredTests>
    <files>
      <file xlink:href="../testfiles/sc1.3.1_l1_137.html" hrefLang="en" />
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20060427_1.3_content-structure-separation-programmatic" primary="yes">
      <locations expectedResult="fail">
        <location line="9" column="12" xpath="/:html/:body/:p/:font" />
      </locations>
      <functionalOutcome>
        <p>
					Presentation tag has been used in order to convey
					information.
				</p>
      </functionalOutcome>
      <techComment>
        <p>
					Use a semantic tag like
					<html:code>strong</html:code>
					.
				</p>
      </techComment>
    </rule>
  </rules>
  <namespaceMappings>
    <namespace nsPrefix="" nsURI="http://www.w3.org/1999/xhtml" />
  </namespaceMappings>
</testCaseDescription>