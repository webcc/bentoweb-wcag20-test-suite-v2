  <formalMetadata>
    <description>A document that uses CSS for formatting information with strike through decoration.</description>
    <title>Presentational elements in order to convey information and/or relationships.	</title>
    <dc:creator>evlach@aegean.gr</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2005-2007</dc:rights>
    <date>2005-08-28</date>
    <status>validated</status>
  </formalMetadata>
  <technology>
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label><html:acronym>XHTML</html:acronym>™ 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
      <testElements>
        <testElement>
          <elementName localname="p" namespace="http://www.w3.org/1999/xhtml" />
          <specReference xlink:href="http://www.w3.org/TR/html401/struct/text.html#edef-P">
						Paragraphs: the P element
					</specReference>
        </testElement>
      </testElements>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
      <p>The test case is intended to pass as CSS has been used only for decoration (i.e. not conveying meaning or relationships).</p>
    </purpose>
    <expertGuidance>
      <p>Check whether CSS has been used in order to convey information.</p>
    </expertGuidance>
    <requiredTests>
      <testModes>
        <testMode>experts</testMode>
      </testModes>
    </requiredTests>
    <files>
      <file xlink:href="../testfiles/sc1.3.1_l1_109.html" hrefLang="en" />
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20060427_1.3_content-structure-separation-programmatic" primary="yes">
      <locations expectedResult="pass">
        <location line="11" column="106" xpath="/h:html/h:body/h:p[1]" />
        <location line="20" column="106" xpath="/h:html/h:body/h:p[2]" />
        <location line="32" column="106" xpath="/h:html/h:body/h:p[3]" />
      </locations>
      <functionalOutcome>
        <p>CSS has been used only for presentation.</p>
      </functionalOutcome>
    </rule>
  </rules>
  <namespaceMappings>
    <namespace nsPrefix="h" nsURI="http://www.w3.org/1999/xhtml" />
  </namespaceMappings>
