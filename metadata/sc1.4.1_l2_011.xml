  <formalMetadata>
    <description>Document with color, but no background-color defined by CSS (see WCAG 2.0 Techniques F24).</description>
    <title>Color but no background-color (CSS)</title>
    <dc:creator>johannes.koch@fit.fraunhofer.de</dc:creator>
    <dc:language>en</dc:language>
    <dc:rights>Copyright BenToWeb 2005-2007</dc:rights>
    <date>2006-08-08</date>
    <status>accepted QA</status>
  </formalMetadata>
  <technology>
    <recommendation xlink:href="http://www.w3.org/TR/xhtml1/">
      <label>
        <html:acronym>XHTML</html:acronym>™ 1.0 The Extensible HyperText Markup Language (Second Edition)</label>
    </recommendation>
    <recommendation xlink:href="http://www.w3.org/TR/1998/REC-CSS2-19980512/">
      <label>
        <html:acronym>CSS</html:acronym> 2.0 Specification</label>
    </recommendation>
  </technology>
  <testCase complexity="atomic">
    <purpose>
      <p>The test is intended to fail because no background is specified with the color (common failure F24).</p>
    </purpose>
    <requiredTests>
      <testModes>
        <testMode>automatic</testMode>
      </testModes>
    </requiredTests>
    <files>
      <file xlink:href="../testfiles/sc1.4.1_l2_011.html" hrefLang="en" />
    </files>
  </testCase>
  <rules>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20060427_1.4_visual-audio-contrast-contrast" primary="yes">
      <locations expectedResult="fail" />
      <functionalOutcome>
        <p>No background is specified with the color.</p>
      </functionalOutcome>
    </rule>
    <rule id="http://bentoweb.org/refs/rulesets.xml#WCAG2_20050630_1.4_visual-audio-contrast-contrast" primary="no">
      <locations expectedResult="fail" />
      <functionalOutcome>
        <p>No background is specified with the color.</p>
      </functionalOutcome>
    </rule>
  </rules>
  <namespaceMappings>
    <namespace nsPrefix="" nsURI="http://www.w3.org/1999/xhtml" />
  </namespaceMappings>
</testCaseDescription>